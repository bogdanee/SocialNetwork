<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane opacity="0.8" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <TextField fx:id="textFieldUsername" layoutX="100.0" layoutY="115.0" prefHeight="0.0" prefWidth="200.0" promptText="Username" style="-fx-background-color: black; -fx-text-inner-color: white; -fx-border-color: gray;" />
      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="172.0" prefHeight="0.0" prefWidth="200.0" promptText="Password" style="-fx-background-color: black; -fx-text-inner-color: white; -fx-border-color: gray;" />
      <Label fx:id="labelError" layoutX="100.0" layoutY="239.0" prefHeight="38.0" prefWidth="200.0" style="-fx-visibility: no;" text=" " textFill="RED" />
      <CheckBox fx:id="checkBox" layoutX="190.0" layoutY="207.0" mnemonicParsing="false" onAction="#handleCheckBox" text="Show password" textFill="WHITE" />
      <Button fx:id="buttonRegister" layoutX="100.0" layoutY="294.0" mnemonicParsing="false" onAction="#handleRegister" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #248cf0;" text="REGISTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="buttonLogin" layoutX="209.0" layoutY="294.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #248cf0;" text="LOGIN" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="textFieldPassword" layoutX="100.0" layoutY="172.0" prefHeight="0.0" prefWidth="200.0" promptText="Password" style="-fx-background-color: black; -fx-text-inner-color: white; -fx-border-color: gray;" />
   </children>
</AnchorPane>
