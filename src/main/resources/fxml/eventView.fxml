<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.layout.BorderPane?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EventController">
   <center>
      <AnchorPane opacity="0.8" prefHeight="420.0" prefWidth="600.0" style="-fx-background-color: black;">
         <children>
            <JFXHamburger fx:id="hamburger" layoutX="14.0" layoutY="14.0" prefWidth="35" prefHeight="35" onMouseClicked="#handleHamburger"/>
            <ImageView fx:id="imageEvent" fitHeight="160.0" fitWidth="217.0" layoutX="30.0" layoutY="115.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelEventName" layoutX="30.0" layoutY="68.0" prefHeight="21.0" prefWidth="197.0" text="Name" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
            <Label fx:id="labelOrganiser" layoutX="210.0" layoutY="115.0" prefHeight="17.0" prefWidth="197.0" text="Organiser: " textFill="WHITE" />
            <Label fx:id="labelDateEvent" layoutX="210.0" layoutY="145.0" prefHeight="17.0" prefWidth="197.0" text="Date: " textFill="WHITE" />
            <TextArea fx:id="textAreaDescription" layoutX="200.0" layoutY="170.0" prefWidth="150.0" prefHeight="100.0" text="Description: " style="-fx-background-color: gray; -fx-border-style: none; -fx-text-fill: WHITE; -fx-control-inner-background: black; -fx-border-color: black"/>
            <Button fx:id="buttonSubscribe" layoutX="150.0" layoutY="348.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="97.0" text="Subscribe" style="-fx-background-color: #248cf0;" textFill="WHITE"/>
            <Button fx:id="buttonUnSubscribe" layoutX="150.0" layoutY="348.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="97.0" text="Unsubscribe" style="-fx-background-color: #248cf0;" textFill="WHITE"/>
            <Label layoutX="380.0" layoutY="68.0" style="-fx-text-fill: white;" text="Your Events">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ListView fx:id="listViewEvents" layoutX="370.0" layoutY="100.0" opacity="0.8" prefHeight="242.0" prefWidth="209.0" style="-fx-background-color: black;" />
            <Button fx:id="buttonCreate" layoutX="436.0" layoutY="348.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="77.0" text="Create" style="-fx-background-color: #248cf0;" textFill="WHITE" onAction="#handleCreate"/>
            <TextField fx:id="textFieldSearch" layoutX="160.0" layoutY="21.0" prefHeight="34.0" prefWidth="250.0" promptText="Search event" onAction="#handleSearch"/>
            <Button layoutX="410.0" layoutY="21.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="77.0" text="Search" style="-fx-background-color: #248cf0;" textFill="WHITE"/>
            <ListView fx:id="listViewSearch" layoutX="160.0" layoutY="60.0" opacity="0.8" prefHeight="242.0" prefWidth="250.0" style="-fx-background-color: black;" />
         </children>
      </AnchorPane>
   </center>
   <left>
      <JFXDrawer fx:id="drawer" defaultDrawerSize="220.0" prefWidth="0.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
